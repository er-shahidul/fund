    '@FOSCommentBundle/Resources/assets/css/comments.css'

    %}
    {{ parent () }}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}

    <script type="text/javascript">
        var shareUrl = '{{ app.request.getUri }}'
    </script>

{% endblock %}

