{% extends "base.html.twig" %}

{% block body %}


            {#<div class="jumbotron">#}
    <div class="container">
        <div class="row">
                <div class="col-xs-6 col-md-8">
                    <div class="row3">
                        <form class="form-horizontal" id="form-campaign" enctype="multipart/form-data"
                              role="form" method="post" action="{{ path('donation_create',{id:campaign.id}) }}">

                                <div class="portlet-body">

                                    <div class="form-body">
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.donate_amount) }}</label>
                                            <div class="col-md-5 col-sm-5">
                                                {{ form_widget(form.donate_amount,{ 'attr': {'style':'width:425px;height:100px;font-size:68px;'}}) }}
                                                <span class="help-block">{{ form_errors(form.donate_amount) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.first_name) }}</label>
                                            <div class="col-md-7 col-sm-7">
                                                {{ form_widget(form.first_name) }}
                                                <span class="help-block">{{ form_errors(form.first_name) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.last_name) }}</label>
                                            <div class="col-md-7 col-sm-7">
                                                {{ form_widget(form.last_name) }}
                                                <span class="help-block">{{ form_errors(form.last_name) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.email) }}</label>
                                            <div class="col-md-7 col-sm-7">
                                                {{ form_widget(form.email) }}
                                                <span class="help-block">{{ form_errors(form.email) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.postalCode) }}</label>
                                            <div class="col-md-7 col-sm-7">
                                                {{ form_widget(form.postalCode) }}
                                                <span class="help-block">{{ form_errors(form.postalCode) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.notes) }}</label>
                                            <div class="col-md-7 col-sm-7">
                                                {{ form_widget(form.notes,{ 'attr': {'style':'width:425px;height:122px;'}}) }}
                                                <span class="help-block">{{ form_errors(form.notes) }}</span>
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="col-md-3 col-sm-3 control-label">If hide your name and comments</label>
                                            <div class="col-md-7 col-sm-7">
                                                {{ form_widget(form.anonymous) }}
                                                <span class="help-block">{{ form_errors(form.anonymous) }}</span>
                                            </div>
                                        </div>

                                    </div>
                                    {{ form_row(form._token) }}
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">

                                                <button type="submit" id="donation-submit" class="btn green">Continue</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>


                        </form>
                    </div>
                </div>
                <div class="col-xs-6 col-md-4">
                    <div class="row1">
                        <div class="details round5 processsidebar">
                            <div class="headbar light-bkgd" style="background-color: #F3F9E4">
                                <div class="camptitle">{{ campaign.title|default }}</div>
                            </div>
                            <div class="detailscontainer">
                                <div class="photoframe"><img src="{% if campaignPhoto[0] is defined %}
                                {{ asset('uploads/campaign/') }} {{ campaignPhoto[0].path }}
                                {% else %}
                                {{ asset('assets/img/people.png') }}
                                 {% endif %}"
                                                             width="264px" height="175px" alt="campaign photo"></div>
                                <div class="raised mt10 ">{{ campaign.amount|default }}</div>
                                <hr class="mt20">
                                <a class="delogo"></a>
                            </div>
                        </div>
                    </div>
                    <div style="clear: both"></div>
                    <div class="row3">
                      <strong>about Organizer</strong>
                    </div>
                </div>
        </div>
    </div>
{% endblock %}
 {#           #}{#</div>#}{#
