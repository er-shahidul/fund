                                            </ul>
                                            <br/><br/>
                                            {#<div class="fb-share-button btn btn-donate-black clearfix"
                                                 data-href="{{ app.request.getUri }}"
                                                 data-layout="button_count">
                                            </div>#}
                                            <a href="{{ app.request.getUri }}"
                                               class="btnShare btn btn-donate-black clearfix"> Share On Facebook</a>
                                            {#<div id="shareBtn" data-href="{{ app.request.getUri }}"  style="width: 100%"
                                                 class="btn btn-donate-black clearfix">
                                                Share On Facebook
                                            </div>#}

                                            <br/>
                                            <br/>
                                            {#<div id="shareBtnTwitter" style="width: 100%"
                                                  class="btn btn-donate-black clearfix">Share On Twitter
                                             </div>#}
                                        </div>
                                        <!--</div>-->
                                        <div class="widget wpo-social-counter bg-sidebar">

                                        </div>
                                    </aside>
                                    <aside id="campaign_backers_widget-2" class="widget clearfix widget_campaign_backers_widget">
                                        <h3 class="widget-title">
                                            <span>Donaters</span></h3>

                                        <div class="campaign-backer col-lg-4 col-md-4 col-sm-12 col-xs-12">

                                            {% for recentDonation in recentDonations %}
                                                <div class="row">
                                                    <div class="col-lg-4 donationPhoto">
                                                        {% if recentDonation.anonymous == 0 %}

                                                            {% if recentDonation.createdBy.profile.path is defined %}
                                                            <img src="/{{ recentDonation.createdBy.profile.path|default }}">
                                                            {% else  %}
                                                                <div class="avatar-contain donationPhotoText">
                                                                    <div class="avatar-no-pic media-round thumbnail">
                                                                        {{ recentDonation.firstName|first|upper }}{{ recentDonation.lastName|first|upper }}
                                                                    </div>
                                                                </div>
                                                            {% endif %}

                                                        {% else  %}
                                                        <img src="{{ asset('assets/img/people.png') }}">
                                                        {% endif %}
                                                    </div>
                                                    <div class="col-lg-8 donationDetail">
                                                        <h3><p>{{ recentDonation.donateAmount|default }} BDT</p></h3>
                                                        <p>{% if recentDonation.anonymous == 1 %}Anonymous{% else %}
                                                                {{ recentDonation.firstName|default }} {{ recentDonation.lastName|default }}{% endif %}</p>
                                                    </div>
                                                    <div class="clearfix"></div>
                                                    <div class="col-lg-11 donationDescription">
                                                        <p>{{ recentDonation.notes|default }}</p>
                                                    </div>
                                                </div>
