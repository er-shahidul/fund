{% extends "layout.html.twig" %}

{% block body %}
    <div class="wrapper-breadcrumb">

        <section id="breadcrumb" class="breadcrumb wpo-breadcrumb" style="background: #F0F0F0 url() no-repeat 0 0;">
            <nav class="container"><a href="/">Home</a>
                <span class="delimiter">/</span>
                <a href="{{ path('campaign_list') }}">Campaign</a>
                <div class="breadcrumb-name"><span><span class="current"><span itemprop="name">{{ campaign.title|default }}</span></span> </span>
                </div>
            </nav>
        </section>
    </div>
<div class="container-inner">
    <div class="row">
        <form class="form-horizontal" id="form-campaign" enctype="multipart/form-data" role="form" method="post" action="{{ path('campaign_individual_create') }}">

            <div class="col-md-12">
                <div class="portlet-body">

                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.title) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.title) }}
                                <span class="help-block">{{ form_errors(form.title) }}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.amount) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.amount) }}
                                <span class="help-block">{{ form_errors(form.amount) }}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.description) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.description) }}
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.category) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.category) }}
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.location) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.location) }}
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.endOfCampaignDate) }}</label>
                            <div class="col-md-6">
                                <div class="input-icon">
                                    <div class="input-group input-small date date-picker" data-date-format="yyyy-mm-dd" data-date-viewmode="years">
                                        <span class="input-group-btn"></span>
                                        {{ form_widget(form.endOfCampaignDate, { 'attr': {'class': 'form-control datepicker', 'style': 'width: 188px;'} }) }}
                                    </div>
                                </div>
                                <span class="help-block margin-left-39" style="color:darkred;">{{ form_errors(form.endOfCampaignDate) }}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.campaignVideoUrl) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.campaignVideoUrl) }}
                                <span class="help-block">{{ form_errors(form.campaignVideoUrl) }}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.campaignFiles) }}</label>
                            <div class="col-md-5 col-sm-5">
                                {{ form_widget(form.campaignFiles) }}
                                <span class="help-block"></span>
                            </div>
                        </div>
                        {% if is_granted("ROLE_ADMIN") %}
                            <div class="form-group">
                                <label class="col-md-3 col-sm-3 control-label">{{ form_label(form.status) }}</label>
                                <div class="col-md-5 col-sm-5">
                                    {{ form_widget(form.status) }}
                                    <span class="help-block"></span>
                                </div>
                            </div>
                        {% endif %}

                    </div>
                    {{ form_row(form._token) }}
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" id="campaign-submit" style="width: 30%" class="btn btn-donate-black">Save</button>
                            </div>
                        </div>
                    </div>
                   <br/>

                </div>
            </div>

        </form>
    </div>
    </div>
<script type="text/javascript">
    var tokenPhoneVerify = {{ user.confirmationTokenPhoneVerify| default("undefined") }};

    var tokenEmailVerify = {{ user.confirmationTokenEmailVerify|default("undefined") }};

</script>



{% endblock %}
